<?xml version="1.0"?>
<odoo>
    
    <record id="presale_order_view_form" model="ir.ui.view">
        <field name="name">presale.order.form</field>
        <field name="model">x_presale.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(validate_action)d" type="action" string="Validate" x_state="new" class="oe_highlight"/>
                    <field name="x_state" widget="statusbar" statusbar_visible="new,validated"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="x_name"/>
                        <h1>
                            <field name="x_name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="x_customer_id" options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Order Lines">
                            <field name="x_order_line_ids" mode="tree,form" nolabel="1">
                                <tree editable="bottom">
                                    <field name="x_product_id"/>
                                    <field name="x_quantity"/>
                                    <field name="x_price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="presale_order_view_tree" model="ir.ui.view">
        <field name="name">presale.order.tree</field>
        <field name="model">x_presale.order</field>
        <field name="arch" type="xml">
            <tree string="presale order">
                <field name="x_name"/>
                <field name="x_customer_id"/>
            </tree>
        </field>
    </record>

    <record id="presale_order_action" model="ir.actions.act_window">
        <field name="name">Presales</field>
        <field name="res_model">x_presale.order</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
